<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.model.BaseTeacher" table="base_teacher" schema="onelecture">
        <id name="id">
            <column name="id" sql-type="int(255)"/>
        </id>
        <property name="teacherName">
            <column name="teacher_name" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="teacherNumber">
            <column name="teacher_number" sql-type="varchar(255)" not-null="true"/>
        </property>
        <property name="teacherCollege">
            <column name="teacher_college" sql-type="varchar(255)" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>